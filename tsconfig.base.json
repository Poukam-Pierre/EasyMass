{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@easy-messe/libs/theme": ["libs/theme/src/index.ts"],
      "@easy-messe/libs/theme/server": ["libs/theme/src/server.ts"],
      "@easy-messe/libs/utils": ["libs/utils/src/index.ts"],
      "@easy-messe/libs/utils/server": ["libs/utils/src/server.ts"],
      "@easy-messe/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@easyMesse/theme": ["theme/src/index.ts"],
      "@easyMesse/theme/server": ["theme/src/server.ts"],
      "@easyMesseLibs/theme": ["libs/src/index.ts"],
      "@easyMesseLibs/theme/server": ["libs/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
